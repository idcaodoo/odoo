<odoo>
    <record id="action_finalidad" model="ir.actions.act_window">
        <field name="name">Finalidad</field>
        <field name="res_model">idca.finalidad</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_finalidad_form" model="ir.ui.view">
        <field name="name">finalidad.form</field>
        <field name="model">idca.finalidad</field>
        <field name="arch" type="xml">
            <form string="Finalidad">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_finalidad_tree" model="ir.ui.view">
        <field name="name">finalidad.tree</field>
        <field name="model">idca.finalidad</field>
        <field name="arch" type="xml">
            <tree string="Finalidad">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
