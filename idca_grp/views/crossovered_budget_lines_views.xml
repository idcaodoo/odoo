<odoo>
    <record id="view_crossovered_budget_lines_form_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.form.inherit</field>
        <field name="model">crossovered.budget</field>
        <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campos Many2one en la vista de árbol después de 'general_budget_id' -->
            <xpath expr="//form/sheet/notebook/page[1]/field[@name='crossovered_budget_line']/tree/field[@name='general_budget_id']" position="after">
                <field name="budget_details_id"/>
            </xpath>


            <xpath expr="//form/sheet/notebook/page[1]/field[@name='crossovered_budget_line']/tree/field[@name='analytic_account_id']" position="after">
                <field name="budget_account_analytic"/>
            </xpath>

            <xpath expr="//form/sheet/notebook/page[1]/field[@name='crossovered_budget_line']/tree/field[@name='practical_amount']" position="after">
                <field name="importe_comprometido" sum="Importe comprometido"/>
                <field name="importe_devengado" sum="Importe devengado"/>
                <field name="available_budget" sum="Presupuesto disponible"/>
            </xpath>

            <xpath expr="//field[@name='practical_amount']" position="attributes">
                <attribute name="string">Importe ejercido</attribute>
            </xpath>
        </field>
    </record>
</odoo>
