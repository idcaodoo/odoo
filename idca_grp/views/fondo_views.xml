<odoo>
    <record id="action_fondo" model="ir.actions.act_window">
        <field name="name">Fondo</field>
        <field name="res_model">idca.fondo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_fondo_form" model="ir.ui.view">
        <field name="name">fondo.form</field>
        <field name="model">idca.fondo</field>
        <field name="arch" type="xml">
            <form string="Fondo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fondo_tree" model="ir.ui.view">
        <field name="name">fondo.tree</field>
        <field name="model">idca.fondo</field>
        <field name="arch" type="xml">
            <tree string="Fondo">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
