<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="analytic_distribution_wizard_form_view" model="ir.ui.view">
        <field name="name">analytic_distribution_wizard_form_view</field>
        <field name="model">analytic.distribution.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="purchase_order_id" invisible="1"/>
                <field name="analytic_distribution_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="percentage" width="0.5" />
                        <field name="budget" width="0.5" />
                    </tree>
                </field>
                <footer>
                    <button string="Save" type="object" name="action_confirm" class="btn btn-primary" />
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
