<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="pos_preparation_display.Order" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_pdis_orderline')]" position="before">
            <div class="o_pdis_order_note w-100 bg-white overflow-auto">
                <div class="o_pdis_service_mostrador flex-shrink-0 ps-2 text-start">
                    <span t-if="this.props.order.table_service_note" t-esc="this.props.order.table_service_note or ''" />
                </div>
            </div>
        </xpath>
    </t>
</templates>
