<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="pos_restaurant.FloorScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('floor-selector')]" position="after">
            <div class="oe_row text-center h-54" style="max-width: -webkit-fill-available;">
                <button class="button button-add btn btn-secondary p-3 ms-auto rounded-0" t-ref="add-floor-ref" t-on-click="addMostrador">
                    <i class="fa fa-plus icon-button me-2" role="img" aria-label="Add" title="Add"></i>
                    Mostrador
                </button>
                <span style="padding-left: 10px;" />
                <button class="button button-add btn btn-secondary p-3 ms-auto rounded-0" t-ref="add-floor-ref" t-on-click="addDomicilio">
                    <i class="fa fa-plus icon-button me-2" role="img" aria-label="Add" title="Add"></i>
                    Domicilio
                </button>
                <span style="padding-left: 10px;" />
                <button class="button button-add btn btn-secondary p-3 ms-auto rounded-0" t-ref="add-floor-ref" t-on-click="addAplicaciones">
                    <i class="fa fa-plus icon-button me-2" role="img" aria-label="Add" title="Add"></i>
                    Aplicaciones
                </button>
            </div>
        </xpath>
    </t>
</templates>
