<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="cfdi_download_pack_search" model="ir.ui.view">
            <field name="name">cfdi.download.pack.search</field>
            <field name="model">cfdi.download.pack</field>
            <field name="arch" type="xml">
                <search>
                    <field name="id_paquete"/>
                    <field name="request_id"/>
                    <filter string="Emitidos" name="request_type" domain="[('request_type', '=', 'emitidos')]"/>
                    <filter string="Recibidos" name="request_type" domain="[('request_type', '=', 'recibidos')]"/>
                    <filter name="rfc_solicitante" string="RFC" context="{'group_by':'rfc_solicitante'}"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="cfdi_download_pack_tree">
            <field name="name">cfdi.download.pack.tree</field>
            <field name="model">cfdi.download.pack</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="request_id" optional="hide"/>
                    <field name="rfc_solicitante" optional="hide"/>
                    <field name="id_paquete"/>
                    <field name="request_type"/>
                    <field name="fecha_inicial"/>
                    <field name="fecha_final"/>
                    <field name="numero_cfdis"/>
                    <field name="cod_estatus" optional="hide"/>
                    <field name="mensaje" optional="hide"/>
                    <!-- <field name="paquete_b64" optional="hide"/>                 -->
                    <field name="company_id" invisible="1"/>
                    <button name="%(pack_qweb_html_report_id)d" type="action" class="fa fa-desktop" title='Previsualizar' />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="cfdi_download_pack_form">
            <field name="name">cfdi.download.pack.form</field>
            <field name="model">cfdi.download.pack</field>
            <field name="arch" type="xml">
                <form string="Paquetes de la solicitud">
                    <sheet>
                        <group>
                            <field name="request_id"/>
                            <field name="id_paquete"/>
                            <field name="numero_cfdis"/>
                            <field name="cod_estatus"/>
                            <field name="mensaje"/>
                            <field name="paquete_b64"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cfdi_download_pack_action" model="ir.actions.act_window">
            <field name="name">Paquetes de solicitudes</field>
            <field name="res_model">cfdi.download.pack</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- Menu -->
        <!-- <menuitem id="cfdi_download_pack_menu"
        name="Paquetes de solicitudes"
        parent="cfdi_boveda_fiscal_menu"
        action="cfdi_download_pack_action"
        sequence="200"/>     -->
    </data>
</odoo>