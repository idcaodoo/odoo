<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_list_tree_view" model="ir.ui.view">
            <field name="name">purchase_list_tree_view</field>
            <field name="model">purchase.list</field>
            <field name="arch" type="xml">
                <tree create="false" delete="1" multi_edit="1" sample="1">
                    <header>
                        <button name="action_gen_purchase_list" class="o_button_generate_leads oe_highlight" display="always" string="Generate Purchase List" type="object" />
                    </header>
                    <field name="name" />
                    <field name="create_date" />
                    <field name="purchase_ids" widget="many2many_tags" optional="hide"/>
                    <field name="supplier_ids" widget="many2many_tags" optional="hide"/>
                    <field name="allowed_partners" widget="many2many_tags" column_invisible="True" />
                </tree>
            </field>
        </record>

        <record id="purchase_list_form_view" model="ir.ui.view">
            <field name="name">purchase_list_form_view</field>
            <field name="model">purchase.list</field>
            <field name="arch" type="xml">
                <form create="false" delete="1">
                    <header>
                        <button name="action_confirm_orders_and_entries" display="always" string="Confirm Purchase Orders &amp; Picking" type="object" class="oe_highlight" invisible="state != 'ongoing'"/>
                        <field name="state" widget="statusbar" statusbar_visible="ongoing,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="1" force_save="1" />
                            <field name="create_date" />
                            <field name="supplier_ids" widget="many2many_tags" />
                            <field name="purchase_ids"
                                   readonly="1" force_save="1"
                                   widget="many2many_tags"/>
                            <field name="supplier_name" invisible="1" />
                            <field name="allowed_partners" widget="many2many_tags" invisible="1" />
                        </group>
                        <notebook>
                            <page name="purchase_list" string="Purchase List">
                                <field name="purchase_list_lines">
                                    <tree editable="bottom" multi_edit="1" delete="false" create="false">
                                        <field name="image_1920" class="o_clickable" widget="image" options="{'size': [100, 100]}" optional="hide"/>
                                        <field name="product_name" readonly="1" widget="section_and_note_text"/>
                                        <field name="product_qty" width="5%" readonly="1" force_save="1" string="QTY"/>
                                        <field name="purchased" width="5%" widget="boolean_toggle"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="image_1920" class="o_clickable" widget="image" options="{'size': [100, 100]}" optional="hide"/>
                                                <field name="product_name" readonly="1" widget="section_and_note_text"/>
                                                <field name="product_qty" string="QTY"/>
                                                <field name="purchased" widget="boolean_toggle"/>
                                                <field name="purchase_order_ids" widget="many2many_tags"/>
                                                <field name="supplier_ids" widget="many2many_tags"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Kanban View-->
         <record id="purchase_list_kanban_view" model="ir.ui.view">
            <field name="name">purchase_list_kanban_view</field>
            <field name="model">purchase.list</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <header>
                        <button name="action_gen_purchase_list" class="o_button_generate_leads oe_highlight" display="always" string="Generate Purchase List" type="object" />
                    </header>
                    <field name="name"/>
                    <field name="create_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record">
                                <div class="o_kanban_details">
                                    <strong t-esc="record.name.value" class="o_kanban_record_title"/>
                                    <div>
                                        <span><strong>Create Date:</strong> <t t-esc="record.create_date.value"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="purchase_list_search_view" model="ir.ui.view">
            <field name="name">purchase_list_search_view</field>
            <field name="model">purchase.list</field>
            <field name="arch" type="xml">
                <search>
                    <field name="supplier_name" />
                    <separator/>
                    <filter string="Missing Products" name="fb_missing_product" domain="[('confirm_order_and_entry','=',False), ('missing_product', '=', True)]"/>
                    <separator/>
                    <filter string="Purchased" name="fb_purchased" domain="[('purchased','=',True)]"/>
                    <filter string="Unpurchased" name="fb_unpurchased" domain="[('purchased','=',False)]"/>
                    <group expand="1" string="Group by">
                        <filter string="Suppliers" name="gb_supplier" context="{'group_by': 'supplier_ids'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="purchase_list_act_window" model="ir.actions.act_window">
            <field name="name">Purchase List</field>
            <field name="res_model">purchase.list</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="purchase_list_tree_view"/>
        </record>

        <menuitem id="purchase_list_menu" name="Purchase List" parent="purchase.menu_procurement_management" action="purchase_list_act_window" sequence="100"/>
    </data>
</odoo>